# LapLens API Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false

# =============================================================================
# REDIS (Upstash)
# =============================================================================
# For Upstash (production):
# REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

REDIS_URL=

# Cache TTL in seconds (default: 24 hours)
CACHE_TTL_SECONDS=86400

# =============================================================================
# SUPABASE
# =============================================================================
# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (for server-side operations)
# Found in: Settings > API Keys > secret key
SUPABASE_SERVICE_KEY=

# Supabase JWT secret (for verifying auth tokens)
# Found in: Settings > JWT Keys > Legacy JWT Secret
SUPABASE_JWT_SECRET=

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per window for anonymous users
RATE_LIMIT_REQUESTS=100

# Requests per window for authenticated users
RATE_LIMIT_AUTHENTICATED_REQUESTS=200

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# FASTF1
# =============================================================================
# Cache directory for FastF1 data
FASTF1_CACHE_DIR=/tmp/fastf1_cache

# =============================================================================
# CORS
# =============================================================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173
